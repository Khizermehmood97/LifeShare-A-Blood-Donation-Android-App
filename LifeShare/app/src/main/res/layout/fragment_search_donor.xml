<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.osama.lifeshare.SearchDonor">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="SEARCH DONORS"
        android:textColor="@color/colorNavHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greycontainer"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="90dp"
    android:layout_marginRight="20dp">

    <Spinner
        android:id="@+id/spinner_bloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        />

</LinearLayout>

         <TextView
             android:id="@+id/edittext1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/title"
             android:layout_marginStart="30dp"
             android:layout_marginTop="70dp"
             android:text="Blood Group :"
             android:textSize="18dp"
             android:textColor="#000000"
             />



    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_btn1"
        android:text="Search"
        android:textColor="#fff" />


</RelativeLayout>
